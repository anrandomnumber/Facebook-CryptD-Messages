{
  "name": "Facebook - CryptD Messages",
  "version": "1.0",
  "author": "Novica Zivkovic",
  "manifest_version": 2,
  "description": "Adds a page action in Facebook Messages tab in order to crypt message text user entered in message box or decrypt selected crypted message.",
  "icons": { "16": "img/icon16.png", "48": "img/icon48.png", "128": "img/icon128.png" },
  "background": { "scripts": ["background.js"] }, "page_action": { "default_icon": "img/icon48.png", "default_title": "Facebook - CrypteD Messages" },
  "permissions" : ["tabs", "*://*.facebook.com/" ],

"commands": {
    "crypt": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "MacCtrl+Shift+X"
      },
      "description": "Crypt Message"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+X",
        "mac": "MacCtrl+Shift+X",
        "chromeos": "Ctrl+Shift+X",
        "linux": "Ctrl+Shift+X"
      }
    },
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "windows": "Ctrl+Shift+X",
        "mac": "MacCtrl+Shift+X"
      }
    },
    "decrypt": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "MacCtrl+Shift+Z"
      },
      "description": "Decrypt message"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Z",
        "mac": "MacCtrl+Shift+Z",
        "chromeos": "Ctrl+Shift+Z",
        "linux": "Ctrl+Shift+Z"
      }
    },
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "windows": "Ctrl+Shift+Z",
        "mac": "MacCtrl+Shift+Z"
      }
    }
  }

}
